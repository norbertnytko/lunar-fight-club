= simple_form_for fighter do |f|
  = f.input :first_name
  = f.input :last_name
  = f.input :description
  = f.input :avatar

  h3 Skills
  #skills
    = f.simple_fields_for :skills do |skill|
      = render 'skill_fields', f: skill
    .links
      = link_to_add_association 'add skill', f, :skills
  = f.button :submit
